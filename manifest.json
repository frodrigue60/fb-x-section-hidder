{
    "manifest_version": 3,
    "name": "Facebook/X/Twitter Section Hidder",
    "description": "Hide specific sections on X (Twitter) and Facebook for a cleaner browsing experience.",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.x.com/*",
                "*://*.facebook.com/*",
                "*://*.twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    }
}